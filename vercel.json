{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": null,
  "functions": {
    "dist/api/handler.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "src": "/graphql", "dest": "/dist/api/handler" },
    { "src": "/health", "dest": "/dist/api/handler" },
    { "src": "/", "dest": "/dist/api/handler" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
