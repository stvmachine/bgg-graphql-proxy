PORT=4000
NODE_ENV=development
CACHE_TTL=300
BGG_API_BASE_URL=https://boardgamegeek.com/xmlapi2


# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=bgg-graphql
DYNAMODB_ENDPOINT=  # Leave empty for production, use localhost:8000 for local DynamoDB

# Storage Configuration
STORAGE_TYPE=keyvalue  # Options: 'dynamodb' or 'keyvalue' (for local development)

# Redis Configuration (Upstash) - REQUIRED
# Redis is always used for caching
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
