{
  "name": "bgg-graphql-proxy",
  "version": "2.0.0",
  "description": "BGG GraphQL Proxy using Hasura - Simple and powerful board game data API",
  "main": "hasura/data-fetcher.js",
  "scripts": {
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f",
    "fetch-data": "cd hasura && npm start",
    "fetch-data:render": "node scripts/fetch-data-render.js",
    "install-deps": "cd hasura && npm install",
    "db-reset": "docker-compose down -v && docker-compose up -d",
    "hasura-console": "echo 'Open http://localhost:8080/console'",
    "graphql-endpoint": "echo 'GraphQL endpoint: http://localhost:8080/v1/graphql'",
    "render:deploy": "echo 'Deploy to Render: https://render.com'"
  },
  "keywords": [
    "bgg",
    "boardgamegeek",
    "graphql",
    "hasura",
    "proxy",
    "docker",
    "postgresql",
    "render"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "xml2js": "^0.6.2"
  }
}