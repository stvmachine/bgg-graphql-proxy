{
  "name": "bgg-graphql-proxy",
  "version": "1.0.0",
  "description": "GraphQL proxy for BoardGameGeek API built with TypeScript and Apollo Server",
  "main": "dist/handler.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "npm run generate-types && tsc && cp -r src/schema dist/ && cp dist/api/handler.js api/handler.js",
    "vercel-build": "npm run build",
    "type-check": "tsc --noEmit",
    "generate-types": "tsx scripts/generate-types.ts",
    "codegen": "tsx scripts/generate-types.ts",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "postinstall": "npm run generate-types"
  },
  "keywords": [
    "bgg",
    "boardgamegeek",
    "graphql",
    "apollo",
    "typescript",
    "proxy"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "apollo-datasource": "^3.3.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.2.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/xml2js": "^0.4.14",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": "~20.0.0"
  }
}
